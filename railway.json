{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "chmod +x start.sh && ./start.sh"
  },
  "networking": {
    "ports": [
      {
        "port": 8000,
        "protocol": "HTTP"
      }
    ]
  }
} 