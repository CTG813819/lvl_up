<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@android:color/transparent"
    android:padding="0dp">

    <!-- Album Art as background (or AI background image) -->
    <ImageView
        android:id="@+id/album_art"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Album Art" />

    <!-- Semi-transparent overlay for readability -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Chip container with icon and text -->
    <LinearLayout
        android:id="@+id/chip_container"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        android:background="@drawable/notification_chip_bg"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ai_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_guardian"
            android:contentDescription="AI Icon" />

        <TextView
            android:id="@+id/ai_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="guardian"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Subtitle (Metric or Status) -->
    <TextView
        android:id="@+id/ai_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chip_container"
        android:layout_alignStart="@id/chip_container"
        android:layout_marginTop="2dp"
        android:text="Leveling Progress"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Progress Bar (AI progress) -->
    <ProgressBar
        android:id="@+id/ai_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:progress="75"
        android:max="100"
        android:progressDrawable="@android:drawable/progress_horizontal" />

    <!-- Progress Text (e.g., 75%) -->
    <TextView
        android:id="@+id/ai_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ai_progress"
        android:layout_alignEnd="@id/ai_progress"
        android:layout_marginEnd="16dp"
        android:text="75%"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</RelativeLayout> 